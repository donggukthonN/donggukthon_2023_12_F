<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Unchecked -->
    <item android:state_checked="false">
        <layer-list>
            <item android:bottom="10dp" android:drawable="@drawable/ic_checkbox" android:top="10dp" />
            <shape>
                <corners android:radius="10dp" />
            </shape>
        </layer-list>
    </item>

    <!-- Checked -->
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="10dp" />
                </shape>
            </item>
            <item android:bottom="10dp" android:drawable="@drawable/ic_checkbox_checked" android:top="10dp" />
        </layer-list>
    </item>
</selector>
